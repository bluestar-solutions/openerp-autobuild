#!/usr/bin/make -f

ifeq ($(shell lsb_release -is),Ubuntu)
    ifeq ($(shell lsb_release -rs),12.04)
        SUBSTVARS = -Vdist:Depends=""
    endif
    ifeq ($(shell lsb_release -rs),12.10)
        SUBSTVARS = -Vdist:Depends="python-git (>= 0.3.2)"
    endif
    ifeq ($(shell lsb_release -rs),13.04)
        SUBSTVARS = -Vdist:Depends="python-git (>= 0.3.2), python-jsonschema (>= 0.7)"
    endif
    ifeq ($(shell lsb_release -rs),13.10)
        SUBSTVARS = -Vdist:Depends="python-git (>= 0.3.2), python-jsonschema (>= 0.7), python-argcomplete (>= 0.5.4)"
    endif
endif

%:
	dh $@ --with python2

override_dh_gencontrol:
    dh_gencontrol -- $(SUBSTVARS)
